<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ayj.aiyijia.activity.personcenter.dlq.ServiceSjActivity">
    <include layout="@layout/common_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dip"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加等级"
            android:textSize="16dip"/>

        <TextView
            android:id="@+id/tv_add_agency_shangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上级"
            android:textSize="16dip"
            android:layout_marginLeft="16dip"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_add_agency_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/sousuo_dl"
        android:background="#E6E6E6"
        android:padding="16dip"
        android:hint="请输入手机号"
        android:textSize="16dip"
        android:drawablePadding="4dip"/>

    <Button
        android:id="@+id/btn_add_agency_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_kuang2"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="40dip"
        android:text="确定添加"
        android:textColor="@color/white"/>

</LinearLayout>

