<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ayj.aiyijia.activity.personcenter.lc.LcActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_theme">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:background="@color/app_theme"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_song"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_radiobtn_left"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/radio_btn_text_color2"
                android:textSize="18dp"
                android:text="送礼"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/rb_shou"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_radiobtn_right"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/radio_btn_text_color2"
                android:textSize="18dp"
                android:text="收礼"/>
        </RadioGroup>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
