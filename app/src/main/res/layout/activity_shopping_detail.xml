<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ayj.aiyijia.activity.shopping.ShoppingDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/app_theme">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="春苗首页"/>
            <RelativeLayout
                android:id="@+id/rl_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gwcaz"

                    />
                <TextView
                    android:id="@+id/tv_gw_count"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/red_corners"
                    android:gravity="center"
                    android:text="99"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:indicator_drawable_selected="@drawable/indicator_selceted"
                    app:indicator_drawable_unselected="@drawable/indicator_unselected"
                    />
                <TextView
                    android:id="@+id/tv_foot_zq_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="1111"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginLeft="16dip"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <!--折扣铺-->
                    <RelativeLayout
                        android:id="@+id/relativelayout_detail_zq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_foot_zq_detail_yuanjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品原价："
                            android:textColor="@color/titleLimitToBuy"
                            android:textSize="15dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/tv_foot_zq_detail_yuanjian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="原价"
                            android:layout_toRightOf="@id/tv_foot_zq_detail_yuanjia"
                            android:layout_alignBottom="@id/tv_foot_zq_detail_yuanjia"
                            />

                        <TextView
                            android:id="@+id/tv_foot_zq_detail_qianzhui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="社员现价："
                            android:textSize="15dp"
                            android:textColor="@color/titleLimitToBuy"
                            android:layout_below="@id/tv_foot_zq_detail_yuanjia"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="15dp"
                            />

                        <TextView
                            android:id="@+id/tv_foot_zq_detail_sheyuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/errorColor"
                            android:textSize="15dp"
                            android:layout_toRightOf="@id/tv_foot_zq_detail_qianzhui"
                            android:layout_alignBottom="@id/tv_foot_zq_detail_qianzhui"
                            />
                    </RelativeLayout>
                    <!--兑换铺-->
                    <RelativeLayout
                        android:id="@+id/relativelayout_detail_dh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_foot_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个电子币"
                            android:textSize="15dp"
                            android:textColor="@color/errorColor"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativelayout_detail_xd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品价格："
                                android:textSize="15dp"/>

                            <TextView
                                android:id="@+id/tv_foot_xd_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/errorColor"
                                android:textSize="15dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_foot_zq_detail_xiaoliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titleLimitToBuy"
                        android:textSize="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/item_divide"
                    android:layout_marginTop="5dp"
                    />

                <RelativeLayout
                    android:id="@+id/relativelayout_zq_detail_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/tv_foot_zq_detail_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认款式"
                        android:textColor="@color/app_theme"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:layout_centerVertical="true"
                        android:text="数量"/>
                    <com.ayj.aiyijia.view.AddAndSub.MyAddAndSubView
                    android:id="@+id/addandsub_shopcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    app:max="200"
                    app:min="0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="21dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/item_divide"
                    />
                <RelativeLayout
                    android:id="@+id/relativelayout_zq_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/ripple_bg"
                    >
                    <TextView
                        android:id="@+id/tv_foot_zq_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dip"
                        android:text="送货地址"
                        android:textSize="15dp"
                        />
                    <TextView
                        android:id="@+id/tv_shop_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titleLimitToBuy"
                        android:textSize="15dp"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@mipmap/songhuodizhi"
                        android:layout_below="@id/tv_foot_zq_detail_address"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ljd_zuojt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dip"
                        android:layout_centerVertical="true"
                        android:id="@+id/imageView" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/item_divide"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品详情"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:id="@+id/iv_cp_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--底下的布局-->
    <RelativeLayout
        android:id="@+id/relativeLayout_zq_detail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/linearlayout_zq_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_add_shopcart"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="加入购物车"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:background="@color/app_theme"/>

            <Button
                android:id="@+id/btn_buy_now"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="立即购买"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:background="#F38A3C"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_zq_detail_dh"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/app_theme"
            android:text="立即兑换"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>
