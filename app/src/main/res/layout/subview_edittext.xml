<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_left_sub"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_left_sub"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_middle_content"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_middle_edittext"
        android:gravity="center"
        android:inputType="number"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_right_add"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_right_add"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="+"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

</LinearLayout>