<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:background="@drawable/radius_background_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >
    <TextView
        android:id="@+id/vehicle_carnb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="京E5678"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"/>
        <ImageView
            android:id="@+id/iv_xg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@mipmap/shanchu_clxxb"
            />
        <ImageView
            android:id="@+id/iv_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/xgclxx"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/item_divide"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <TextView
            android:id="@+id/vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车主姓名:"
            />
        <TextView
            android:layout_toRightOf="@id/vehicle_name"
            android:id="@+id/vehicle_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:text="闵振雄"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闵振雄"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <TextView
            android:id="@+id/vehicle_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌类型:"
            />
        <TextView
            android:layout_toRightOf="@id/vehicle_brand"
            android:id="@+id/vehicle_brand_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:text="奥迪A6"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <TextView
            android:id="@+id/vehicle_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发动机号:"
            />
        <TextView
            android:layout_toRightOf="@id/vehicle_motor"
            android:id="@+id/vehicle_motor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:text="1245321"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <TextView
            android:id="@+id/vehicle_recognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="识别代码:"
            />
        <TextView
            android:layout_toRightOf="@id/vehicle_recognition"
            android:id="@+id/vehicle_recognition_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:text="4587132"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <TextView
            android:id="@+id/vehicle_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号码:"
            />
        <TextView
            android:layout_toRightOf="@id/vehicle_mobile"
            android:id="@+id/vehicle_mobile_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:text="1588564546"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <TextView
            android:id="@+id/vehicle_idnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车主身份证号:"
            />
        <TextView
            android:layout_toRightOf="@id/vehicle_idnumber"
            android:id="@+id/vehicle_idnumber_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:text="32084564564564151"/>
        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>