<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ayj.aiyijia.activity.personcenter.dlq.DlqActivity">
    <include layout="@layout/common_title_layout"/>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:background="#dbdbdb"
        android:layout_height="40dp">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_theme"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/xsls_down"
        android:layout_centerInParent="true"
        android:text=""/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dip"
            android:orientation="horizontal"
            android:background="@color/item_divide">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的"
                android:textSize="16dip"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提成"
                android:textSize="16dip"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_my"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    />
                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_marginLeft="4dip"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_price"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/errorColor"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dip"
        android:orientation="horizontal"
        android:background="@color/item_divide">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的上级"
            android:textSize="16dip"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_shangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无上级代理"
            android:textSize="16dip"
            android:paddingTop="24dip"
            android:paddingBottom="24dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linearLayout_shangji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shangji1"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    />
                <TextView
                    android:id="@+id/tv_shangji_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_marginLeft="4dip"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/iv_shangji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/zuanshi"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_shangji_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/errorColor"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dip"
        android:orientation="horizontal"
        android:background="@color/item_divide">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的下级"
            android:textSize="16dip"/>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提成"
            android:textSize="16dip"
            />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false">

        <TextView
            android:id="@+id/tv_xiaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无下级代理"
            android:textSize="16dip"
            android:paddingTop="24dip"
            android:paddingBottom="24dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <com.ayj.aiyijia.view.MyListView
            android:id="@+id/lv_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该月总提成："/>

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/errorColor"/>

    </LinearLayout>
</LinearLayout>
