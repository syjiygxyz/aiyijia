<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ayj.aiyijia.activity.personcenter.safecenter.SafeMainActivity">
    <include layout="@layout/common_title_layout"/>
    <RelativeLayout
        android:id="@+id/pwd_xg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_background_touch"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改账号密码"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:drawableLeft="@mipmap/item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/item_divide" />
    <RelativeLayout
        android:id="@+id/zf_set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_background_touch"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="设置支付密码"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:drawableLeft="@mipmap/item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/item_divide" />
    <RelativeLayout
        android:id="@+id/zf_xg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_background_touch"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改支付密码"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:drawableLeft="@mipmap/item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/item_divide" />
    <RelativeLayout
        android:id="@+id/mb_set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_background_touch"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="密保问题"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:drawableLeft="@mipmap/item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/item_divide" />
</LinearLayout>
